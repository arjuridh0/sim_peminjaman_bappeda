# Keep index.php as homepage (Beranda)
DirectoryIndex index.php

# Enable URL Rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# ============================================
# ModSecurity Bypass for Booking System
# ============================================
# CRITICAL: Disable ModSecurity for all booking-related files
# to prevent false positives blocking legitimate POST requests

<IfModule mod_security.c>
    # Main booking pages
    <FilesMatch "^(booking|booking_status|room_detail|calendar)\.php$">
        SecRuleEngine Off
    </FilesMatch>
    
    # Admin panel (entire admin folder)
    <LocationMatch "^/siprada3/admin/">
        SecRuleEngine Off
    </LocationMatch>
    
    # API endpoints
    <LocationMatch "^/siprada3/api/">
        SecRuleEngine Off
    </LocationMatch>
</IfModule>

# Alternative syntax for mod_security2
<IfModule mod_security2.c>
    # Main booking pages
    <FilesMatch "^(booking|booking_status|room_detail|calendar)\.php$">
        SecRuleEngine Off
    </FilesMatch>
    
    # Admin panel
    <LocationMatch "^/siprada3/admin/">
        SecRuleEngine Off
    </LocationMatch>
    
    # API endpoints
    <LocationMatch "^/siprada3/api/">
        SecRuleEngine Off
    </LocationMatch>
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\\.">
    Order allow,deny
    Deny from all
</FilesMatch>
